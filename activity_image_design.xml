<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageDesignActivity">


    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/designImage"
        android:layout_height="match_parent"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatActionActionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="floatActionBtn"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_add_to_photos_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/designImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/designImage"
        app:layout_constraintVertical_bias="0.953"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>